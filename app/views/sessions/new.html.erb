<% provide(:title, 'Log In') %>

<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <fieldset>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </fieldset>
  
  <fieldset>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </fieldset>
  
  <fieldset>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </fieldset>
  
  <fieldset>
    <%= submit_tag "Log In" %>
  </fieldset>
  
  <p><%= link_to "Forgot your password?", recover_path %></p>
<% end %>